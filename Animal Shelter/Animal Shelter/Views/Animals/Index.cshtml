@model IEnumerable<Animal_Shelter.Models.Category>

@{
    ViewBag.Title = "Animals";
}

<h2 style="text-align:center">Categories</h2>
<div class="col-md-6">
    <h3>
        Select from @Model.Count()
        categories:
    </h3>
    <br />
    <ul>
        @foreach (var category in Model)
        {
            <li class="lead">@Html.ActionLink("Our cute " + category.Name, "Browse", new { category = category.Name })</li>
        }
    </ul>
</div>
<div class="col-md-6">
    <img src="https://www.petsit.com/stuff/contentmgr/files/4/d165bf6a1ef70dc597416652f8ac53dc/files/cats_and_dogs_getting_along.jpg" width="500px"/>
</div>
